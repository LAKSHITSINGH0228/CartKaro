<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CartKaro.Resources.Themes.Default">

    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="PageBg">White</Color>
    <Color x:Key="LabelTextColor">Black</Color>
    <Color x:Key="ButtonBgColor">#72ACF1</Color>
    <Color x:Key="ButtonTextColor">Black</Color>
    <Color x:Key="ShellTitleColor">Black</Color>
    <Color x:Key="SeparateLvColor">Black</Color>
    <Color x:Key="TextLvColor">Black</Color>
    <Color x:Key="DetailLvColor">Black</Color>
    <Color x:Key="SearchBarBgColor">LightGray</Color>
    <Color x:Key="SearchBarTextColor">Black</Color>
    <Color x:Key="SearchBarPlaceholderColor">Black</Color>
    <Color x:Key="ContentPageBgColor">White</Color>
    <Color x:Key="EntryBgColor">White</Color>
    <Color x:Key="EntryTextColor">Black</Color>


    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>

</ResourceDictionary>
