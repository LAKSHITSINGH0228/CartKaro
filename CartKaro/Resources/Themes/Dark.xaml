<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CartKaro.Resources.Themes.Dark">
    <Color x:Key="Primary">#141414</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">Black</Color>

    <Color x:Key="PageBg">Black</Color>
    <Color x:Key="LabelTextColor">white</Color>
    <Color x:Key="ButtonBgColor">#72ACF1</Color>
    <Color x:Key="ButtonTextColor">Black</Color>
    <Color x:Key="ShellTitleColor">White</Color>
    <Color x:Key="SeparateLvColor">White</Color>
    <Color x:Key="TextLvColor">White</Color>
    <Color x:Key="DetailLvColor">White</Color>
    <Color x:Key="SearchBarBgColor">LightGray</Color>
    <Color x:Key="SearchBarTextColor">White</Color>
    <Color x:Key="SearchBarPlaceholderColor">White</Color>
    <Color x:Key="ContentPageBgColor">Black</Color>
    <Color x:Key="EntryBgColor">Black</Color>
    <Color x:Key="EntryTextColor">White</Color>


    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
</ResourceDictionary>
